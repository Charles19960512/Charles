<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#33000000"/>
    <RelativeLayout
        android:layout_height="70dp"
        android:layout_width="match_parent">


        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:id="@+id/ls_item_userData">

            <ImageView
                android:id="@+id/lsi_userAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/lsi_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="用户名"
                android:layout_alignTop="@+id/lsi_userAvatar"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/lsi_userInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lsi_userAvatar"
                android:layout_centerHorizontal="true"
                android:text="信息" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lsi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="20sp"
            android:textColor="@color/colorred"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="￥"
            android:textSize="18sp"
            android:textColor="@color/colorred"
            android:gravity="right"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lsi_price"
            android:layout_toStartOf="@+id/lsi_price" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/lsi_image1"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/lsi_image2"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/lsi_image3"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/lsi_title"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:text="商品介绍"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"/>


    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lsi_street"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lsi_location"
                android:textColor="@color/colorblue"
                android:text="来自南昌"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginRight="1dp"
                android:gravity="right|center"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="租街"
                android:textColor="@color/colorblue"/>

            <View
                android:layout_width="2px"
                android:layout_height="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorblue"
                />

            <TextView
                android:id="@+id/lsi_streetName"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:gravity="left|center"
                android:text="TCG"
                android:textColor="@color/colorblue" />


        </LinearLayout>

       <!-- <TextView
            android:id="@+id/dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/lsi_street"
            android:layout_toRightOf="@+id/lsi_street"
            android:text="点赞" />
        <TextView
            android:id="@+id/lsi_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/dianzan"
            android:layout_toRightOf="@+id/dianzan"
            android:text="TextView" />
        -->

    </RelativeLayout>





</LinearLayout>