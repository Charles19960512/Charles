<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.startsmake.StreetDemo.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="70dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="租街"
            android:textColor="#ed3c86"
            android:textSize="50sp"/>
        
    </LinearLayout>
    <EditText
        android:id="@+id/accoutbuf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher"
        android:background="@drawable/edittext_style"
        android:maxLines="1"
        android:hint="租街账号/手机号"/>

    <EditText
        android:id="@+id/passwordbuf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_style"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawableRight="@mipmap/ic_launcher"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/Loginbutton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner"
        android:text="登录"
        android:textColor="#FFF"
        android:textSize="18sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="注册新用户"
            android:background="@null"
            android:textColor="@color/colorxiaozi"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/RButton" />

        <Button
            android:text="忘记密码"
            android:textColor="@color/colorxiaozi"
            android:background="@null"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/RButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/forget" />

        <TextView
            android:text="Copyright @2017-20xx 租街"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView7" />

        <Button
            android:text="开发人员入口"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/root" />
    </RelativeLayout>


</LinearLayout>
